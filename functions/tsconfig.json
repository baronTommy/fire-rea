{
  "compilerOptions": {

    // import exort 関連
    "esModuleInterop": true,
    
    "lib": ["dom", "esnext"],
    
    // json 読みたい
    "resolveJsonModule": true,
    
    "types": ["jest", "node"],

    // -----------------
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
