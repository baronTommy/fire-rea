{
  "name": "functions",
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts}'",
    "build": "npm run lint && tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:publishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv"
  },
  "engines": {
    "node": "10"
  },
  "main": "lib/index.js",
  "dependencies": {
    "add": "^2.0.6",
    "commander": "^4.1.0",
    "cross": "^1.0.0",
    "csv-parse": "^4.8.5",
    "date-fns": "^2.9.0",
    "date-fns-timezone": "^0.1.4",
    "eslint": "^6.8.0",
    "firebase": "^7.7.0",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "puppeteer": "^2.0.0",
    "typesaurus": "^5.0.0",
    "yarn": "^1.22.0"
  },
  "devDependencies": {
    "@types/eslint": "^6.1.3",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.1.7",
    "@types/node-fetch": "^2.5.4",
    "@types/puppeteer": "^2.0.0",
    "firebase-functions-test": "^0.1.6",
    "typescript": "^3.2.2"
  },
  "private": true,
  "jest": {
    "preset": "ts-jest",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts?|js?)$",
    "moduleFileExtensions": [
      "ts",
      "json",
      "js"
    ]
  }
}
